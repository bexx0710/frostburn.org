<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Frostburn" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="top">
    <div class="top-header">
      <img src="/images/frostburnlogo-header.png" class='img-responsive header-img'> <div class="header-right">Share The Warmth!</div>
    </div>
    <div class="top-nav">
      <%= link_to 'Home', '/', :class => "nav-link" %>
      <%= link_to 'Must Read', '/read-this.html', :class => "nav-link" %>
      <%= link_to 'Tickets', '/tickets.html', :class => "nav-link" %>
      <%= link_to 'Volunteer', '/volunteer.html', :class => "nav-link" %>
      <%= link_to 'Financials', '/financial-reports', :class => "nav-link" %>
      <%= link_to 'Contact', '/contact-us.html', :class => "nav-link" %>
    </div>
    Frostburn <%= data.event.year %>: <%= data.event.dates %><br>
    <%= data.event.early_access %><br>
    </div>
    <section class="body-text">
      <%= yield %>
    </section>
  </body>
</html>
